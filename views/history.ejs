<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Uploaded Files</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .file-list {
      margin-top: 20px;
    }
    .file-item {
      margin-bottom: 10px;
    }
    .file-item a {
      text-decoration: none;
      color: #3498db;
    }
  </style>
</head>
<body>
  <h1>Uploaded Files</h1>
  <div class="file-list">
    <% if (files.length > 0) { %>
      <% files.forEach(file => { %>
        <div class="file-item">
          <a href="<%= file.url %>" target="_blank"><%= file.name %></a>
        </div>
      <% }) %>
    <% } else { %>
      <p>No files uploaded yet.</p>
    <% } %>
  </div>
</body>
</html>
